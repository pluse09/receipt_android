<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/toolbar_item</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton.Icon.White"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="cornerRadius">3dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#1A1A1A</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>



</resources>
